        tools:layout_editor_absoluteY="59dp"
        app:layout_constraintStart_toEndOf="@+id/drug_dose"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/drug_daily_doses"
        android:layout_width="wrap_content"
